{
  "name": "homecast",
  "version": "0.4.0",
  "description": "Self-hosted Chromecast streaming for your home network",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "node test/proxy.test.js && node test/cache.test.js && node test/extract.test.js && node test/playlist.test.js && node test/edge-cases.test.js && node test/performance.test.js && node test/stream-detection.test.js",
    "test:proxy": "node test/proxy.test.js",
    "test:cache": "node test/cache.test.js",
    "test:extract": "node test/extract.test.js",
    "test:playlist": "node test/playlist.test.js",
    "test:edge-cases": "node test/edge-cases.test.js",
    "test:performance": "node test/performance.test.js",
    "test:advanced": "node test/stream-detection.test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "typecheck": "tsc --project jsconfig.json",
    "check": "npm run lint && npm run typecheck && npm test",
    "dev": "NODE_ENV=development node server.js",
    "release:patch": "./release.sh patch",
    "release:minor": "./release.sh minor",
    "release:major": "./release.sh major"
  },
  "keywords": [
    "chromecast",
    "casting",
    "streaming",
    "hls",
    "m3u8",
    "video",
    "self-hosted",
    "homelab"
  ],
  "author": "HomeCast Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simno/homecast.git"
  },
  "bugs": {
    "url": "https://github.com/simno/homecast/issues"
  },
  "homepage": "https://github.com/simno/homecast#readme",
  "engines": {
    "node": ">=25.0.0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "castv2-client": "1.2.0",
    "cheerio": "^1.2.0",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express": "5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "mdns-js": "1.0.3",
    "ws": "8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "semver": "^7.7.3"
  }
}
